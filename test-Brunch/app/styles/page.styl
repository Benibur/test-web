body
  padding: 5px

#main

.table-ly-wrpr
  display: table
  width: 100%
  height: 100%
  table-layout: fixed

.table-ly-hder
  display: table-row
  width: 100%

.table-ly-ctnt
  display: table-cell
  height: 100%

.monWell
  border: 1px solid rgba(0, 0, 0, 0.12)
  border-radius: 7px 7px 7px 7px
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05) inset
  padding: 0px
  margin: 0px
  height: 100%

#well-editor
  background-color: #333333

#well-result
  background-color: #ffffff

#col-wrap
  display: table
  width: 100%
  height: 100%

#editor-col
  display: table-cell
  width: 50%
  padding-right: 6px

#result-col
  display: table-cell
  vertical-align: top

#generalBtnBar
  padding: 0px 7px 4px 15px

#editorDiv
  height: 100%

#editorContent
  padding: 7px
  overflow: scroll
  word-wrap: break-word

#editorTextContent
  background: #eeeeee
  width: 100%
  height: 100%
  overflow: auto
  word-wrap: break-word
  border: 1px solid #CCCCCC
  border-radius: 3px 3px 3px 3px
  color: #555555
  display: inline-block
  font-size: 13px
  line-height: 18px
  margin-bottom: 9px
  padding: 0px
  -moz-transition: border 0.2s linear 0s, box-shadow 0.2s linear 0s
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset

#resultContent
  padding: 7px

#resultText
  background-color: #E9EEF2
  width: 100%
  height: 100%

#editorBtnBar
  padding: 7px 7px 0px 7px

#resultBtnBar
  padding: 7px 7px 0px 7px

#divMainBtn *
  display: inline-block
  vertical-align: middle

